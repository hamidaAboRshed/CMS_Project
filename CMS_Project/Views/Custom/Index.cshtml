@model IEnumerable<CMS_Project.Models.Custom>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Create New", "Create", "Custom", new { id = ViewBag.CatId }, null)
</p>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cust_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cust_Type)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category.ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Requierd)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cust_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Requierd)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }) 
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

