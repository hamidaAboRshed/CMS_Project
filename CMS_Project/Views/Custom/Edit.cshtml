@model CMS_Project.Models.Custom

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Custom</legend>

        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Cat_ID)
        <div class="editor-label">
            @Html.LabelFor(model => model.Cust_Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Cust_Name)
            @Html.ValidationMessageFor(model => model.Cust_Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Cust_Type, "Type")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Cust_Type, new SelectList(Enum.GetValues(typeof(CMS_Project.Models.FieldType))),
                    "Select Type",
                    new { @style = "width: 175px;" })


            @Html.ValidationMessageFor(model => model.Cust_Type)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Requierd)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Requierd)
            @Html.ValidationMessageFor(model => model.Requierd)
        </div>
        @*@Html.HiddenFor(model => model.Cat_ID, new { @Value = ViewBag.CatID, name = "hiddenname" })*@
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { id = Model.Cat_ID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
