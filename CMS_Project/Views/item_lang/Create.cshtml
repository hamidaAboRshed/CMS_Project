@model CMS_Project.Models.item_lang

@{
    ViewBag.Title = "Translate Item";
}

@using (Html.BeginForm("Create", "item_lang", FormMethod.Post, new { enctype = "multipart/form-data" }))
{    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="col-md-4">
            @{TempData["Data"] = ViewBag.itemlang;}
            <div class="editor-field">
                @Html.DropDownListFor(model => model.Lang_ID, ViewBag.Lang_ID as SelectList, "Select Language", new { @class = "form-control" })
            </div>

            <br />

            <div class="editor-field">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })

            </div>

            <br />

            <div class="editor-field">
                @Html.TextAreaFor(model => model.Content, new { @class = "ckeditor" })
                @Html.ValidationMessageFor(model => model.Content)
            </div>

            <br />

            <div class="form-control">
                <input type="file" name="ImageFile" id="ImageFile">
            </div>

            <br />

            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", style = "height:150px" })

            <br />

            @Html.HiddenFor(model => model.item_ID, new { @Value = ViewBag.item_ID, name = "hiddenname" })
            <p>
                <input class="btn btn-lg btn-success btn-block" type="submit" value="Translate" />
            </p>
        </div>
</fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
