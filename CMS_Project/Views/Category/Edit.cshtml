@model CMS_Project.Models.Category_lang

@{
    ViewBag.Title = "Edit Category";
}

@using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="col-md-4">
            @Html.HiddenFor(model => model.ID)


            <div class="editor-field">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })

            </div>

            <br/>

            <div class="editor-field">
                @Html.DropDownListFor(model => model.temp, ViewBag.parentlist as SelectList, "Select Parent", new { @class = "form-control" })
            </div>

            <br />

            <div class="form-control">
                <input type="file" name="ImageFile" id="ImageFile">
            </div>

            <br />

            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", style = "height:150px" })
            <br />

            <p>
                <input class="btn btn-lg btn-success btn-block" type="submit" value="Save" />
            </p>
        </div>
</fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
