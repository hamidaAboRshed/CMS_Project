@using CMS_Project.Models;
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_LayoutContent.cshtml";
    var db = new CMSDataContext();
    var cat = db.Categories.ToArray();

}

<section class="latest-articles has-padding alternate-bg" id="articles">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4">
                <h4>Categories</h4>
            </div>
        </div>

        <div class="row">
            @if (cat.Count() > 0)
            {
                for (int i = 0; i < cat.Count(); i++)
                {
                <div class="col-md-4">
                    <article class="article-post">
                        <a href="#">
                            <div class="article-image has-overlay" style="background-image: url(@cat[i].Image)">

                            </div>
                            <figure>
                                <figcaption>
                                    <h2>@cat[i].Name</h2>
                                    <p>@cat[i].Description</p>
                                </figcaption>
                            </figure>
                        </a>
                    </article>
                </div>
                }
            }

        </div>
        <div class="row is-centered">
            <a href="#intro" class="btn secondary view-more">View more</a>
        </div>
    </div>
</section>