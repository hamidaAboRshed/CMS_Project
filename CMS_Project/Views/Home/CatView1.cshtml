@using CMS_Project.Models;
@{
    ViewBag.Title = "Categories";
    ViewBag.Description = "ListOfCategory";
    Layout = "~/Views/Shared/_LayoutContent.cshtml";
    

} 
<div class="main">
    <div class="container">
        <!-- BEGIN SIDEBAR & CONTENT -->
        <div class="row margin-bottom-40">
            <!-- BEGIN CONTENT -->
            <div class="col-md-12 col-sm-12">
                <div class="content-page">
                    <div class="filter-v1">
                        <h1>Categories List</h1>
                        <div class="row mix-grid thumbnails">
                            @if (Model != null)
                            {
                                foreach (var cat in Model)
                                {
                                    <div class="col-md-4 col-sm-6 mix category_1 mix_all" style="display: block;  opacity: 1;">
                                        <div class="mix-inner">
                                            <img src="@Url.Content(cat.Image)" alt=@cat.alt class="img-responsive">
                                            <div class="mix-details">
                                                <h4>@cat.Name </h4>
                                                <p>@cat.Description</p>
                                                <a class="mix-link" href="@Url.Action("ListOfItem","Home",new{id=cat.category_ID})"><i class="fa fa-link"></i></a>
                                                <a data-rel="fancybox-button" title="@cat.Name" href="@Url.Content(cat.Image)" class="mix-preview fancybox-button"><i class="fa fa-search"></i></a>

                                            </div>
                                        </div>
                                    </div>
                                                        <!--<h4>Cascusamus et iusto odio</h4>-->
                                            <!--<p>At vero eos et accusamus et iusto odio digniss imos duc sasdimus qui sint blanditiis prae sentium voluptatum deleniti atque corrupti quos dolores.</p>-->
                                            
                                }
                                            }
                                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END CONTENT -->
    </div>
    </div>
<script src="~/Content/WebSite/assets/plugins/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
    jQuery(document).ready(function () {
        Layout.init();
        Layout.initTwitter();
        Portfolio.init();
    });
</script>