@model CMS_Project.Models.item_lang

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "ITEM", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    <fieldset>
        <legend>ITEM</legend>
        @Html.HiddenFor(model => model.item_ID, new { @Value = ViewBag.item_ID, name = "hiddenname" })

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Content)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Content, new { @class = "ckeditor" })
            @Html.ValidationMessageFor(model => model.Content)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Image)
        </div>
        <div class="editor-field">
            <input type="file" name="ImageFile" required />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        @Html.HiddenFor(model => model.item.Cat_ID, new { @Value = ViewBag.CatID, name = "hiddenname" })
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", "ITEM", new { id = ViewBag.CatID }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
