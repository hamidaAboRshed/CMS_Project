@model IEnumerable<CMS_Project.Models.item_lang>

@{
    ViewBag.Title = "Item Index";
}


<p>
    @Html.ActionLink("Create New", "Create", "ITEM", new { id = ViewBag.CatId }, null)
</p>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Content)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Image)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    Lang_Name
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Content)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Image)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Lang.Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID, CatId = ViewBag.CatId }, null) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID, CatId = ViewBag.CatId }, null) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID, CatId = ViewBag.CatId }, null) |
                                    @Html.ActionLink("Translate", "Index", "item_lang", new { id = item.ID, CatId = ViewBag.CatId }, null) |
                                    @Html.ActionLink("Custom Fields", "Index", "ItemCustomField", new { id = item.ID }, null)
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
