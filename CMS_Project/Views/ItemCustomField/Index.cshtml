@model IEnumerable<CMS_Project.Models.ItemCustomField>

@{
    ViewBag.Title = "Item Custom Field Index";
}

<p>
    @Html.ActionLink("Create New", "Create", new {id= ViewBag.item_Id })
</p>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.FieldKey)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FieldType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FieldValue)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CurrentItem.ID)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>
                                    @Html.DisplayFor(modelItem => item.FieldKey)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FieldType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FieldValue)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.item_Id)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID, item_Id = ViewBag.item_Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID, item_Id = ViewBag.item_Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID, item_Id = ViewBag.item_Id })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
